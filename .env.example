# Exemple de configuration pour le développement local
# Copiez ce fichier en ".env" à la racine du backend puis ajustez si besoin

# Django
DEBUG=True
SECRET_KEY=dev-secret-change-me  # clé de développement — à remplacer en prod
ALLOWED_HOSTS=localhost,127.0.0.1

# Base de données (SQLite par défaut pour le dev/tests)
DB_ENGINE=sqlite3
#SQLITE_NAME=./db.sqlite3

# CORS/CSRF pour autoriser les frontends Vite (ports 5173 et 5174)
CORS_ALLOW_ALL=0
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:5174,http://127.0.0.1:5174
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:5174,http://127.0.0.1:5174
CORS_ALLOW_CREDENTIALS=1

# Optionnel: URL du client public pour générer des liens sortants
CLIENT_URL=http://localhost:5173

# Paiement par défaut: cinetpay | mtn_momo
PAYMENT_PROVIDER=cinetpay

# MTN Mobile Money (CG) — variables (sandbox par défaut). Si absentes: mode maquette.
MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
# MTN_MOMO_SUBSCRIPTION_KEY=
# MTN_MOMO_API_USER=
# MTN_MOMO_API_KEY=
MTN_MOMO_TARGET_ENV=sandbox
MTN_MOMO_CURRENCY=XAF

# MTN SMS — variables (mode maquette si absentes)
# Point d'accès SMS à confirmer selon MTN CG / partenaire
#MTN_SMS_BASE_URL=https://api.mtn.com/sms
#MTN_SMS_API_KEY=  # ou MTN_SMS_SUBSCRIPTION_KEY
#MTN_SMS_SUBSCRIPTION_KEY=
MTN_SMS_SENDER=GCShop

# Sécurité (production)
#SECURE_SSL_REDIRECT=1
#SESSION_COOKIE_SECURE=1
#CSRF_COOKIE_SECURE=1
#SECURE_HSTS_SECONDS=31536000
#SECURE_HSTS_INCLUDE_SUBDOMAINS=1
#SECURE_HSTS_PRELOAD=1
#SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
